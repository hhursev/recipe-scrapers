                        <div id="ingredients">
                            <h3 class="title-ingr">Ingrediënten</h3>

                            <div class="detail-ingr-block">
                                                                    <ul class="no-bullet">
                                                                                                                                    <li itemprop="recipeIngredient">400 gr pompoenblokjes</li>
                                                                                                                                                                                <li itemprop="recipeIngredient">1 teentje knoflook</li>
                                                                                                                                                                                <li itemprop="recipeIngredient">300 gr rund-varkensgehakt</li>
                                                                                                                                                                                <li itemprop="recipeIngredient">200 gr tortiglioni pasta</li>
                                                                                                                                                                                <li itemprop="recipeIngredient">150 gr zure room</li>
                                                                                                                                                                                <li itemprop="recipeIngredient">75 gr geraspte cheddar</li>
                                                                                                                                                                                <li itemprop="recipeIngredient">olijfolie</li>
                                                                                                                                                                                <li itemprop="recipeIngredient">zout</li>
                                                                                                                                                                                <li itemprop="recipeIngredient">zwarte peper</li>
                                                                                                                        </ul>
