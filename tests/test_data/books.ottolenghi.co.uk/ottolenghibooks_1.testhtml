                                        <g data-name="Group 490" transform="translate(-165 -396)">
                                            <rect class="theme-icon-bg" width="24" height="24" fill="#ffffff" data-name="Rectangle 118" rx="12" transform="translate(165 396)"/>
                                            <g class="theme-icon-content-stroke" fill="none" stroke="#fff" stroke-linecap="square" stroke-width="2" data-name="Group 465">
                                                <path d="M176.242 412.485l4.243-4.243" data-name="Line 1"/>
